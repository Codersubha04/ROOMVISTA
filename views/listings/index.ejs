<% layout("/layouts/broilerplate") -%>

    <div class="container">


        <style>
            #filters {
                display: flex;
                flex-wrap: wrap;
                align-items: center;
            }

            .filter {
                text-align: center;
                margin-top: 1rem;
                margin-right: 1.95rem;
                opacity: 0.7;
            }

            .filter:hover {
                opacity: 1;
                cursor: pointer;
                transition: ease-in-out;

            }

            .filter div i {
                font-size: 1rem;
            }

            .filter p {
                font-size: 0.9rem;
            }

            .tax-checkbox {
                width: 13vw;
                border: 1px solid rgba(0, 0, 0, 0.397);
                border-radius: 12px;
                padding: 9px;
                margin-right: 1.2rem;
            }

            .tax-checkbox:hover {
                border: 1px solid black;
                background-color: #F7F7F7;
            }

            .tax-text {
                font-size: 0.7rem;
                font-weight: bold;
                text-align: center;
                padding-top: 2px;
            }

            label {
                display: block;
            }

            .filters-container {
                width: 6vw;
                height: 3vw;
                border: 1px solid rgba(0, 0, 0, 0.397);
                border-radius: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                flex-wrap: wrap;
                gap: 10px;
            }

            .setting-icon {
                font-size: 1rem;
            }

            .right-angle {
                width: 2.2vw;
                height: 2.2vw;
                border: 1px solid rgba(0, 0, 0, 0.397);
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                margin-right: 1.2rem;
            }

            .right-angle i {
                font-size: 0.8rem;
            }

            .listing-price {
                display: flex;
                justify-content: space-between;
            }

            .tax-info {
                display: none;
            }
        </style>
        <!-- <h2 class="mt-3 mb-3">All Listings</h2> -->
        <div id="filters">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-ticket"></i></div>
                <p>Icons</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountain</p>
            </div>
            <div class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-key"></i></div>
                <p>New</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tents"></i></div>
                <p>Camping</p>
            </div>

            <div class="filter">
                <div><i class="fa-regular fa-snowflake"></i></div>
                <p>Arctic</p>
            </div>
            <div class="right-angle">
                <i class="fa-solid fa-chevron-right"></i>
            </div>
            <div class="filters-container tax-checkbox tax-text">
                <div class="setting-icon"> <i class="fa-solid fa-sliders"></i></div>
                Filters
            </div>
            <div class="tax-checkbox">
                <div class="form-check form-switch form-check-reverse tax-container">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                    <label class="form-check-label" for="flexSwitchCheckReverse">
                        <p class="tax-text ">Display total before taxes</p>
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <% for(let listing of allListings){ %>
                <div class="card listing-card" style="width: 20rem;">

                    <a href="/listings/<%=listing._id%>">
                        <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%=listing.title%>
                                </b> <br>
                            <div class="listing-price">
                               <div>
                                 &#8377;<%=listing.price.toLocaleString("en-IN")%> / Night
                                 &nbsp; <i class="tax-info">+ 18% GST &nbsp; = <b><%= (listing.price * 1.18)%></b></i>
                               </div>
                            </div>
                            </p>
                        </div>
                    </a>
                </div>
                <% } %>
        </div>
    </div>


    <script>
        let togglebtn = document.getElementById("flexSwitchCheckReverse");
        togglebtn.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (info of taxInfo) {
                if (info.style.display != "inline") {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";

                }
            }

        })
    </script>