<% layout("/layouts/broilerplate") -%>



    <div class="container">
        <div class="row">
            <div class="col-6 offset-3 border border-danger p-3">
                <h2 class="text-center">Sign Up</h2>
                <form action="/signup" method="post" novalidate class="needs-validation">
                    <div class="mb-3 mt-4">
                        <label for="Username" class="form-label">Username : </label>
                        <input id="Username" type="text" class="form-control" name="username"
                            placeholder="Enter the Username" required>
                        <div class="valid-feedback">Username looks good !</div>
                        <div class="invalid-feedback">Username should be valid</div>
                    </div>
                    <div class="mb-3 mt-4">
                        <label for="email" class="form-label">Email : </label>
                        <input id="email" type="email" class="form-control" name="email" placeholder="Enter the email"
                            required>
                    </div>
                    <div class="mb-3 mt-4">
                        <label for="password" class="form-label">Password : </label>
                        <input id="password" type="password" class="form-control" name="password"
                            placeholder="Enter the strong password" required min="4">
                        <div class="invalid-feedback">Password should be valid</div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-red mb-3 ">Signup</button>
                    </div>
                </form>
            </div>
        </div>
    </div>